<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyFoodActivity"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibtnBurgerKing"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:background="@drawable/bank_logo_placeholder" />

            <ImageButton
                android:id="@+id/ibtnChickenLicken"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:background="@drawable/bank_logo_placeholder" />

            <ImageButton
                android:id="@+id/ibtnFishaways"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:background="@drawable/bank_logo_placeholder"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtnKFC"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:background="@drawable/bank_logo_placeholder"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtnMcDonalds"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:background="@drawable/bank_logo_placeholder"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/ibtnSteers"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:background="@drawable/bank_logo_placeholder"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </HorizontalScrollView>


    <EditText
        android:id="@+id/etSpent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount Spent"
        android:textAlignment="center"
        android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption1"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 1" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption2"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 2" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption3"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 3" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption4"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 4" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption5"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 5" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption6"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 6" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption7"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 7" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption8"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 7" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption9"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="4"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 9" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/ibtnOption10"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_row="4"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="5dp"
                        android:background="@drawable/bank_logo_placeholder"
                        android:text="Option 10" />
                </GridLayout>
            </android.support.constraint.ConstraintLayout>


        </ScrollView>
    </LinearLayout>
</LinearLayout>